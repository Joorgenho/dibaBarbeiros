<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <title>Cadastro</title>
    <link href='http://fonts.googleapis.com/css?family=Oxygen:400,300,700'>
    {{ style('style')}}
    {{ style('normalize')}}
</head>

<body>
    <header class="top_header clearfix">
        <div class="maxwidth">
            <img src="assets/images/diba.jpg" alt="logotipo Diba Barbeiros" class="top_header_logo_paginas">
        </div>
    </header>
        <form action="/cadastro" method="POST" class="form_barbeiro">
            <div>
                {{ csrfField() }}
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome">
                <br>
                <label for="email">Email:</label>
                <input type="email" id=".email" name="email">
                <br>
                <label for="senha">Senha:</label>
                <input type="password" id=".senha" name="senha">
                <br>
            </div>
            <div>
                <button class = "button" type="submit">Salvar</button>
            </div>
        </form>
</body>    