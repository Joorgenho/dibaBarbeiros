<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <title>Barbeiros</title>
    <link href='http://fonts.googleapis.com/css?family=Oxygen:400,300,700'>
    {{ style('style')}}
    {{ style('normalize')}}
</head>

    <body>
        <header class="top_header clearfix">
            <nav class="sair">
                <ul>
                    <li><a href="/logout">Sair</a></li>
                </ul>
            </nav>
            <div class="maxwidth">
                <img src="assets/images/diba.jpg" alt="logotipo Diba Barbeiros" class="top_header_logo_paginas">
            </div>
            
        </header>
        <section>
            <nav class="top_nav_paginas">
                <ul>
                    <li><a href="/barbeiros">Barbeiros</a></li>
                    <li><a href="/cortes">Cortes</a></li>
                    <li><a href="/sobrancelha">Sobrancelhas</a></li>
                    <li><a href="/barba">Barba</a></li>
                </ul>
            </nav>
        </section>
        <form action="/barbeiros" method="POST" class="form_barbeiro">
            <div>
                {{ csrfField() }}
                <label for="nome_barbeiro">Nome:</label>
                <input type="text" id="nome_barbeiro" name="nome_barbeiro">
                <br>
                <label for="data_aniverversario">Data de aniversário:</label>
                <input type="text" id="data_aniversario" name="data_aniversario">
                <br>
                <label for="endereco_barbeiro">Endereço:</label>
                <input type="text" id="endereco_barbeiro" name="endereco_barbeiro">
                <br>
                <label for="especialidade_barbeiro">Especialidade:</label>
                <input type="text" id="especialidade_barbeiro" name="especialidade_barbeiro">
            </div>
            <div>
                <button class = "button" type="submit">Adicionar</button>
            </div>
        </form>
        <section>
            <h1 class="tabela">Lista de Barbeiros</h1>
            @each(barbeiros in barbeiros)
                <div class="tabela">
                <div>ID:            
                {{ (barbeiros.id -1) }}
                </div>
                <div>Nome:    
                {{ barbeiros.nome_barbeiro }}
                </div>
                <div>Data de aniversário:    
                {{ barbeiros.data_aniversario }}
                </div>
                <div>Endereço:    
                {{ barbeiros.endereco_barbeiro }}
                </div>
                <div>Especialidade:    
                {{ barbeiros.especialidade_barbeiro }}
                </div>
                <button class="button">    
                <a  href="/edita-barbeiros/{{barbeiros.id}}" method = "GET" class="button">Editar</a>
                </button>
                <button class="button">
                <a href="/delete-barbeiros/{{barbeiros.id}}" method = "GET" class="button">Deletar</a>
                </button>    
                @else
                    <h1 class="tabela">Nenhuma tarefa foi criada ainda!</h1>
                @endeach
                </div>
            </section>    
        
        <footer class="footer">
            <ul class="footer_menushare">
                    <li><a href="facebool.com/Diba-Barbeiros-10273864139748"
                        class="icon-facebook">
                    <span class="hidden">
                        <img src="assets/images/facebook.png"/>    
                    </span>
                </a></li>
            </ul>
            <p>Copyright @Joorgenho - 35.988.777/0001-33 - 2021 - Todos os direitos reservados</p>
        </footer>
    </body>
</html>